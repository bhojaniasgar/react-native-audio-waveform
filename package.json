    "react-test-renderer": "19.1.0",
    "typescript": "5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build && yarn test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint"
    ]
  },
  "resolutions": {
    "@types/react": "*"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFilesAfterEnv": [],
    "modulePathIgnorePatterns": []
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
